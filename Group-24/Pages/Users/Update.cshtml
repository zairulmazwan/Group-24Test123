@page
@model Group_24.Pages.Users.UpdateModel
@{
}


<h1>Sign Up</h1>


<div>
    <form method="post">
        <div class="form-group">
            <label>First Name</label>
            <input type="text" asp-for="UserRecord.FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" asp-for="UserRecord.LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" asp-for="UserRecord.EmailAddress" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="text" asp-for="UserRecord.Password" class="form-control" />
        </div>
        <input type="submit" value="Sign Up" class="btn btn-secondary"/>
    </form>
   

</div>